<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/scanFragment">

    <fragment
        android:id="@+id/scanFragment"
        android:name="com.zoom.happiestplaces.scan.ScanFragment"
        android:label="@string/app_name"
        tools:layout="@layout/scan_fragment" />
    <fragment
        android:id="@+id/foodMenuFragment"
        android:name="com.zoom.happiestplaces.foodmenu.FoodMenuFragment"
        android:label="@string/app_name"
        tools:layout="@layout/food_menu_fragment" />
    <fragment
    android:id="@+id/orderFragment"
    android:name="com.zoom.happiestplaces.order.OrderFragment"
    android:label="@string/app_name"
    tools:layout="@layout/order_fragment" />
    <fragment
        android:id="@+id/addReviewFragment"
        android:name="com.zoom.happiestplaces.review.addReview.AddReviewFragment"
        android:label="Rate your Order"
        tools:layout="@layout/add_review_fragment" />

    <fragment
        android:id="@+id/displayReviewFragment"
        android:name="com.zoom.happiestplaces.review.displayReview.DisplayReviewFragment"
        android:label="Reviews"
        tools:layout="@layout/display_review_fragment" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.zoom.happiestplaces.settings.SettingsFragment"
        android:label="@string/settingsFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.zoom.happiestplaces.profile.ProfileFragment"
        android:label="@string/profileFragment"
        tools:layout="@layout/profile_fragment" />

