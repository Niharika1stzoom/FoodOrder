<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodOrder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnSecondary">@color/primaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/jura_medium</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primaryColor</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_app_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.FoodOrder.NoActionBar</item>
    </style>



    <style name="ToolBarStyle">
        <item name="android:textColorPrimary">@color/brown</item>
        <item name="android:textColorSecondary">@color/primaryColor</item>
        <item name="fontFamily">@font/jura_medium</item>

    </style>

    <style name="Theme.FoodOrder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/jura_medium</item>
    </style>
    <style name="Theme.FoodOrder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.FoodOrder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="smallRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
    </style>
    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar" >
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1.0</item>
        <item name="android:scaleX">0.6</item>
        <item name="android:scaleY">0.6</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="Theme.GithubBrowser.MsgTextAppearance"
        parent="android:TextAppearance.DeviceDefault.Medium"></style>
</resources>