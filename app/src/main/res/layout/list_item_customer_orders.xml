<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:elevation="@dimen/card_view_elevation"
    android:padding="@dimen/padding"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    app:cardElevation="@dimen/card_view_elevation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/restaurant_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxLength="20"
            android:text="HardRock Cafe"
            android:textColor="@color/item_color_title"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Restaurant" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/table_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin_small"
            android:text="@string/table"
            android:textColor="@color/item_color_like"
            android:textSize="@dimen/font_medium"
            app:layout_constraintLeft_toRightOf="@id/restaurant_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="-Table :" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/table_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin"
            android:maxLength="4"
            android:text="02"
            android:textColor="@color/item_color_like"
            android:textSize="@dimen/font_medium"
            app:layout_constraintLeft_toRightOf="@id/table_label"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="08" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/item_color_title"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Rs 450" />




        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xsmall"
            android:layout_marginBottom="@dimen/margin_small"
            android:textColor="@color/item_color_like"
            app:layout_constraintLeft_toLeftOf="parent"
            android:maxLength="25"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_name"
            tools:text="Paneer Tikka" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_small"
            android:textColor="@color/item_color_like"
            android:maxLength="25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item1"
            tools:text="Paneer Tikka" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:visibility="gone"
            android:textColor="@color/item_color_like"
            android:maxLength="25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item2"
            tools:text="Paneer Tikka" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/more"
            android:textColor="@color/darkGreen"
            app:layout_constraintLeft_toRightOf="@id/item3"
            app:layout_constraintTop_toBottomOf="@+id/item2"
            tools:text="+3 more" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="25dp"
            app:layout_constraintTop_toTopOf="@id/item1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/item_color_time"
            android:layout_marginRight="@dimen/margin_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item3"
            tools:text="19 Apr 12:00" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>